<!doctype html>
<html lang="en" class="pxp-root">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" href="~/assets/images/favicon.png" type="image/x-icon">
    <link rel="preconnect" href="https://fonts.googleapis.com/">
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600;700&amp;display=swap" rel="stylesheet">
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/assets/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/assets/css/animate.css">
    <link rel="stylesheet" href="~/assets/css/style.css">

    <title>JOBSEEKER - @ViewBag.Title</title>
</head>
<body style="background-color: var(--pxpSecondaryColorLight);">

    <div class="pxp-dashboard-side-panel d-none d-lg-block">
        <div class="pxp-logo">
            <a href="@Url.Action("Index","Admin")" class="pxp-animate"><span style="color: var(--pxpMainColor)">J</span>OBSEEKER</a>
        </div>

        <nav class="mt-3 mt-lg-4 d-flex justify-content-between flex-column pb-100">
            <div class="pxp-dashboard-side-label">Admin tools</div>
            <ul class="list-unstyled">
                <li class="pxp-active"><a href="@Url.Action("Index","Admin")"><span class="fa fa-home"></span>Dashboard</a></li>
                <li ><a href="@Url.Action("listcompany","Admin")"><span class="fa fa-building"></span>List of Companies</a></li>
                <li ><a href="@Url.Action("listcandiodate","Admin")"><span class="fa fa-users"></span>List of Candidates</a></li>
                <li ><a href="@Url.Action("listapplication","Admin")"><span class="fa fa-envelope-open"></span>List of Applications</a></li>
                <li ><a href="@Url.Action("listjobs","Admin")"><span class="fa fa-binoculars"></span>List Of Jobs</a></li>
                <li ><a href="@Url.Action("listcategory","Admin")"><span class="fa fa-list-ul"></span>List of Categories</a></li>
            </ul>
            <div class="pxp-dashboard-side-label mt-3 mt-lg-4">Adding Tools </div>
            <ul class="list-unstyled">
                <li><a href="@Url.Action("addcompany","Admin")"><span class="fa fa-building"></span>Add Company</a></li>
                <li ><a href="@Url.Action("addcanidadate","Admin")"><span class="fa fa-user-plus"></span>Add Candidate</a></li>
                <li ><a href="@Url.Action("Index","Admin")"><span class="fa fa-file-text-o"></span>Add Job</a></li>
                <li ><a href="@Url.Action("addcategory","Admin")"><span class="fa fa-plus-circle"></span>Add Category</a></li>
            </ul>
        </nav>

        <nav class="pxp-dashboard-side-user-nav-container pxp-is-candidate">
            <div class="pxp-dashboard-side-user-nav">
                <div class="dropdown pxp-dashboard-side-user-nav-dropdown dropup">
                    <a role="button" class="dropdown-toggle" data-bs-toggle="dropdown">
                        <div class="pxp-dashboard-side-user-nav-avatar pxp-cover"
                            style="background-image: url(images/avatar-1.jpg);"><img src="~/Image/img22.jpeg" class="img-fluid" /></div>
                        <div class="pxp-dashboard-side-user-nav-name">@Session["AName"]</div>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="@Url.Action("logout","Admin")">Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="pxp-dashboard-content">
        <div class="pxp-dashboard-content-header pxp-is-candidate">
            <div class="pxp-nav-trigger navbar pxp-is-dashboard d-lg-none">
                <a role="button" data-bs-toggle="offcanvas" data-bs-target="#pxpMobileNav" aria-controls="pxpMobileNav">
                    <div class="pxp-line-1"></div>
                    <div class="pxp-line-2"></div>
                    <div class="pxp-line-3"></div>
                </a>
                <div class="offcanvas offcanvas-start pxp-nav-mobile-container pxp-is-dashboard pxp-is-candidate"
                    tabindex="-1" id="pxpMobileNav">
                    <div class="offcanvas-header">
                        <div class="pxp-logo">
                            <a href="index.html" class="pxp-animate"><span
                                    style="color: var(--pxpMainColor)">J</span>OBSEEKER</a>
                        </div>
                        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                            aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <nav class="pxp-nav-mobile">
                            <ul class="navbar-nav justify-content-end flex-grow-1">
                                <li class="pxp-dropdown-header">Admin tools</li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","Admin")">
                                        <span class="fa fa-home"></span>Dashboard
                                    </a>
                                </li>
                                <li class="nav-item"><a href="@Url.Action("listcompany","Admin")"><span class="fa fa-building"></span>List of Companies</a></li>
                                <li class="nav-item"><a href="@Url.Action("listcandiodate","Admin")"><span class="fa fa-users"></span>List of Candidates</a></li>
                                <li class="nav-item"><a href="@Url.Action("listapplication","Admin")"><span class="fa fa-envelope-open"></span>List of Applications</a></li>
                                <li class="nav-item"><a href="@Url.Action("listjobs","Admin")"><span class="fa fa-binoculars"></span>List Of Jobs</a></li>
                                <li class="nav-item"><a href="@Url.Action("listcategory","Admin")"><span class="fa fa-list-ul"></span>List of Categories</a></li>
                                <li class="pxp-dropdown-header mt-4">Insights</li>
                                <li class="nav-item"><a href="@Url.Action("addcompany","Admin")"><span class="fa fa-building"></span>Add Company</a></li>
                                <li class="nav-item"><a href="@Url.Action("addcanidadate","Admin")"><span class="fa fa-user-plus"></span>Add Candidate</a></li>
                                <li class="nav-item"><a href="@Url.Action("Index","Admin")"><span class="fa fa-file-text-o"></span>Add Job</a></li>
                                <li class="nav-item"><a href="@Url.Action("addcategory","Admin")"><span class="fa fa-plus-circle"></span>Add Category</a></li>

                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
            <nav class="pxp-user-nav pxp-on-light">
                <div class="dropdown pxp-user-nav-dropdown">
                    <a role="button" class="dropdown-toggle" data-bs-toggle="dropdown">
                        <div class="pxp-user-nav-avatar pxp-cover"><img src="~/Image/img22.jpeg" class="img-fluid rounded" />
                        </div>
                        <div class="pxp-user-nav-name d-none d-md-block">@Session["AName"]</div>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="@Url.Action("logout","Admin")">Logout</a></li>
                    </ul>
                </div>
            </nav>
        </div> 
        @RenderBody()
        <footer>
            <div class="pxp-footer-copyright pxp-text-light">© 2021 Jobster. All Right Reserved.</div>
        </footer>
    </div>

    <script src="~/assets/js/jquery-3.4.1.min.js"></script>
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/owl.carousel.min.js"></script>
    <script src="~/assets/js/nav.js"></script>
    <script src="~/assets/js/Chart.min.js"></script>
    <script src="~/assets/js/main.js"></script>
</body>
</html>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable #test").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
