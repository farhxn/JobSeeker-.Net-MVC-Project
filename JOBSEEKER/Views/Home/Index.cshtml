                        <div class="pxp-companies-card-1-bottom">
                            <a href="@Url.Action("singlecompany", "Home", new {@id = @item.ID})" class="pxp-companies-card-1-company-jobs"><strong>@item.Name</strong> Ralevant jobs</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="mt-4 mt-md-5 text-center pxp-animate-in pxp-animate-in-top">
            <a href="@Url.Action("company" , "Home" )" class="btn rounded-pill pxp-section-cta">All Companies<span class="fa fa-angle-right"></span></a>
        </div>
    </div>
</section>

