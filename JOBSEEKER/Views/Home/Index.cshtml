<section class="mt-100 pt-100 pb-100" style="background-color: var(--pxpSecondaryColorLight);">
    <div class="pxp-container">
        <h2 class="pxp-section-h2 text-center">Featured Job Offers</h2>
        <p class="pxp-text-light text-center">Search your career opportunity through @Session["total"] jobs</p>

        <div class="row mt-4 mt-md-5 pxp-animate-in pxp-animate-in-top" id="myTable">
            @foreach (var jo in Model.Jobs)
            {
                <div class="col-md-6 col-xl-4 col-xxl-3 pxp-jobs-card-1-container" id="test">
                    <div class="pxp-jobs-card-1 pxp-has-shadow">
                        <div class="pxp-jobs-card-1-top">
                            <a href="@Url.Action("catjob", "Home", new {@cat = jo.category})" class="pxp-jobs-card-1-category">
                                <div class="pxp-jobs-card-1-category-icon"><span class="fa fa-bullhorn"></span></div>
                                <div class="pxp-jobs-card-1-category-label">@jo.category</div>
                            </a>
                            <a href="@Url.Action("singlejob", "Home", new { @id = jo.ID})" class="pxp-jobs-card-1-title">@jo.title</a>
                            <div class="pxp-jobs-card-1-details">
                                <a href="@Url.Action("locatjob", "Home", new {@ocat = jo.locat})" class="pxp-jobs-card-1-location">
                                    <span class="fa fa-globe"></span>@jo.locat
                                </a>
                                <div class="pxp-jobs-card-1-type">@jo.typE</div>
                            </div>
                        </div>
                        <div class="pxp-jobs-card-1-bottom">
                            <div class="pxp-jobs-card-1-bottom-left">
                                <div class="pxp-jobs-card-1-date pxp-text-light">Posted by</div>
                                <a href="@Url.Action("singlecom", "Home", new { @name = jo.company})" class="pxp-jobs-card-1-company">@jo.company</a>
                            </div>
                            <a href="@Url.Action("singlejob", "Home", new { @id = jo.ID})" class="pxp-jobs-card-1-company-logo"><img src="~/image/@jo.cover" class="img-fluid rounded" /> </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="mt-4 mt-md-5 text-center pxp-animate-in pxp-animate-in-top">
            <a href="@Url.Action("findjob", "Home")" class="btn rounded-pill pxp-section-cta">All Job Offers<span class="fa fa-angle-right"></span></a>
        </div>
    </div>
</section>

<section class="mt-100">
    <div class="pxp-container">
        <h2 class="pxp-section-h2 text-center">Find Best Companies</h2>
        <p class="pxp-text-light text-center">Work for the best companies in the world</p>

        <div id="myTable" class="row mt-4 mt-md-5 pxp-animate-in pxp-animate-in-top">
            @foreach (var item in Model.Companies)
            {
