 @model JOBSEEKER.Models.job
@{
    ViewBag.Title = "Detail Page Of Job";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section>
    <div class="pxp-container">
        <div class="pxp-single-job-cover pxp-cover"><img src="~/Image/@Model.cover" class="rounded-bottom" height="100%" width="100%" /></div>
        <div class="pxp-single-job-cover-logo"><img src="~/Image/@Model.cover" class="img-thumbnail rounded-pill img-fluid "/></div>

        <div class="pxp-single-job-content mt-4 mt-lg-5">
            <div class="row">
                <div class="col-lg-7 col-xl-8 col-xxl-9">
                    <div class="row justify-content-between align-items-center">
                        <div class="col-xl-8 col-xxl-6">
                            <h1>@Model.title</h1>
                            <div class="pxp-single-job-company-location">
                                by <a href="@Url.Action("singlecom", "Home", new { @name = Model.company})" class="pxp-single-job-company">@Model.company</a> in
                                <a href="@Url.Action("locatjob", "Home", new {@ocat = Model.locat})" class="pxp-single-job-location">@Model.locat</a>
                            </div>
                        </div>
                        <div class="col-auto">
                            <div class="pxp-single-job-options mt-4 col-xl-0">
                                <button class="btn pxp-single-job-save-btn"><span class="fa fa-heart-o"></span></button>
                                <div class="dropdown ms-2">
                                    <button class="btn pxp-single-job-share-btn dropdown-toggle" type="button" id="socialShareBtn" data-bs-toggle="dropdown" aria-expanded="false">
                                        <span class="fa fa-share-alt">
                                        </span>
                                    </button>
                                    <ul class="dropdown-menu pxp-single-job-share-dropdown" aria-labelledby="socialShareBtn">
                                        <li><a class="dropdown-item" href="#"><span class="fa fa-facebook"></span> Facebook</a></li>
                                        <li><a class="dropdown-item" href="#"><span class="fa fa-twitter"></span> Twitter</a></li>
                                        <li><a class="dropdown-item" href="#"><span class="fa fa-pinterest"></span> Pinterest</a></li>
                                        <li><a class="dropdown-item" href="#"><span class="fa fa-linkedin"></span> LinkedIn</a></li>
                                    </ul>
                                </div>
                                @if (Session["UserLogin"] != null)
                                {

                                    <button class="btn ms-2 pxp-single-job-apply-btn rounded-pill"><a href="@Url.Action("confirm","Home", new { @id = Model.ID})" class="text-white">Apply Now</a></button>
                                
                                    }
                                @if (Session["UserLogin"] == null)
                                {
                                <button class="btn ms-2 pxp-single-job-apply-btn rounded-pill"><a href="@Url.Action("Loginu","Home")" class="text-white">Apply Now</a></button>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4 justify-content-between align-items-center">
                        <div class="col-6">
                            <a href="@Url.Action("catjob", "Home", new {@cat = Model.category})" class="pxp-single-job-category">
                                <div class="pxp-single-job-category-icon"><span class="fa fa-bullhorn"></span></div>
                                <div class="pxp-single-job-category-label">@Model.category</div>
                            </a>
                        </div>

                    </div>

                    <div class="pxp-single-job-content-details mt-4 mt-lg-5">
                        <h4>Overview</h4>
                        <p class="col-6">@Model.overview.</p>
                        <div class="mt-4">
                            <h4>Responsabilities</h4>
                            <ul><li>@Model.responsiblities</li></ul>
                        </div>
                        <div class="mt-4">
                            <h4>Skills</h4>
                            <ul><li>@Model.skills</li></ul>
                        </div>

                        <div class="mt-4 mt-lg-5">
                            @if (Session["UserLogin"] != null)
                            {

                                <button class="btn ms-2 pxp-single-job-apply-btn rounded-pill"><a href="@Url.Action("confirm","Home", new { @id = Model.ID})" class="text-white">Apply Now</a></button>

                            }
                            @if (Session["UserLogin"] == null)
                            {
                                <button class="btn ms-2 pxp-single-job-apply-btn rounded-pill"><a href="@Url.Action("Loginu","Home")" class="text-white">Apply Now</a></button>
                            }

                        </div>
                    </div>
                </div>
                <div class="col-lg-5 col-xl-4 col-xxl-3">
                    <div class="pxp-single-job-side-panel mt-5 mt-lg-0">
                        <div>
                            <div class="pxp-single-job-side-info-label pxp-text-light">Experience</div>
                            <div class="pxp-single-job-side-info-data">@Model.experince</div>
                        </div>
                        <div class="mt-4">
                            <div class="pxp-single-job-side-info-label pxp-text-light">Work Level</div>
                            <div class="pxp-single-job-side-info-data">@Model.lvl</div>
                        </div>
                        <div class="mt-4">
                            <div class="pxp-single-job-side-info-label pxp-text-light">Employment Type</div>
                            <div class="pxp-single-job-side-info-data">@Model.typE</div>
                        </div>
                        <div class="mt-4">
                            <div class="pxp-single-job-side-info-label pxp-text-light">Salary</div>
                            <div class="pxp-single-job-side-info-data">@Model.salary /Month</div>
                        </div>
                    </div>
                    <div class="mt-3 mt-lg-4 pxp-single-job-side-panel">
                        <div class="pxp-single-job-side-company">
                            <div class="pxp-single-job-side-company-logo pxp-cover"><img src="~/Image/@Model.cover" class="img-fluid rounded" /></div>
                            <div class="pxp-single-job-side-company-profile">
                                <div class="pxp-single-job-side-company-name">@Model.company</div>
                                <a href="@Url.Action("singlecom", "Home", new { @name = Model.company})">View profile</a>
                            </div>
                        </div>
                        <div class="mt-4">
                            <div class="pxp-single-job-side-info-data">
                                <ul class="list-unstyled pxp-single-job-side-info-social">
                                    <li><a href="#"><span class="fa fa-facebook"></span></a></li>
                                    <li><a href="#"><span class="fa fa-twitter"></span></a></li>
                                    <li><a href="#"><span class="fa fa-instagram"></span></a></li>
                                    <li><a href="#"><span class="fa fa-linkedin"></span></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<br /><br />
<section class="mt-100">
    <div class="pxp-container">
        <h2 class="pxp-subsection-h2">Related Jobs</h2>
        <p class="pxp-text-light">Other similar jobs that might interest you</p>

        <div class="row mt-3 mt-md-4 pxp-animate-in pxp-animate-in-top pxp-in">
            @{
                var faq = ViewBag.options;
                foreach (var item in faq)
                {
                    <div class="col-xl-6 pxp-jobs-card-2-container">
                        <div class="pxp-jobs-card-2 pxp-has-border">
                            <div class="pxp-jobs-card-2-top">
                                <a href="@Url.Action("singlejob", "Home", new { @id = item.ID})" class="pxp-jobs-card-2-company-logo"><img src="~/Image/@item.cover" class="img-fluid rounded" /></a>
                                <div class="pxp-jobs-card-2-info">
                                    <a href="@Url.Action("singlejob", "Home", new { @id = item.ID})" class="pxp-jobs-card-2-title">@item.title</a>
                                    <div class="pxp-jobs-card-2-details">
                                        <a href="@Url.Action("locatjob", "Home", new {@ocat = item.locat})" class="pxp-jobs-card-2-location">
                                            <span class="fa fa-globe"></span>@item.locat
                                        </a>
                                        <div class="pxp-jobs-card-2-type">@item.typE</div>
                                    </div>
                                </div>
                            </div>
                            <div class="pxp-jobs-card-2-bottom">
                                <a href="@Url.Action("catjob", "Home", new {@cat = item.category})" class="pxp-single-job-category">
                                    <div class="pxp-single-job-category-icon"><span class="fa fa-bullhorn"></span></div>
                                    <div class="pxp-single-job-category-label">@item.category</div>
                                </a>
                                <div class="pxp-jobs-card-2-bottom-right">
                                    <span class="pxp-jobs-card-2-date pxp-text-light">Posted by</span> <a href="@Url.Action("singlecom", "Home", new { @name = item.company})" class="pxp-jobs-card-2-company">@item.company</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                }
                </div>
    </div>
</section>
<br /><br /><br />