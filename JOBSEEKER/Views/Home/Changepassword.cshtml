@model JOBSEEKER.Models.company
  

 @{
    ViewBag.Title = "add job";
    Layout = "~/Views/Shared/_Layoutjobpost.cshtml";
}

<br /> <div class="pxp-dashboard-content-details">
    <h1>Change Password</h1>
    <p class="pxp-text-light">Change your company's E-Mail Passowrd.</p>
    @using (Html.BeginForm("Changepassword", "Home", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row mt-4 mt-lg-5">
            <div class="col-xxl-6">
                <div class="mb-3">
                    <label for="pxp-company-job-title" class="form-label">Job title</label>
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Job Tittle", required = "required" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="mt-4 mt-lg-5">
            <button class="btn rounded-pill pxp-section-cta">Update</button>
        </div>

    }
</div>
